.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
}

.post-author-date {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
}

.post-date {
  margin-left: 20rpx;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}

.post-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.post-like {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

.post-like-image {
  margin-right: 16rpx;
}

.post-like-font {
  font-size: 26rpx;
  margin-right: 40rpx;
}