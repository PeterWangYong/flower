<view data-post-id="{{res.postId}}" bind:tap="onTap" class="post-container">
  <view class="post-author-date">
    <image class="post-author" src="{{res.avatar}}" />
    <text class="post-date">{{res.date}}</text>
  </view>
  <text class="post-title">{{res.title}}</text>
  <image class="post-image" src="{{res.imgSrc}}" />
  <text class="post-content">{{res.content}}</text>
  <view class="post-like">
    <l-icon class="post-like-image" name="favor" color="#666" size="28"/>
    <text class="post-like-font">{{res.collection}}</text>
    <l-icon class="post-like-image" name="eye" color="#666" size="32"></l-icon>
    <text class="post-like-font">{{res.reading}}</text>
  </view>
</view>